  height:48rpx;
  line-height: 48rpx;
  background:rgba(244,246,248,1);
  border-radius:24rpx;
  font-size:28rpx;
  font-family:PingFang-SC;
  font-weight:400;
  color:rgba(0,205,154,1);
  text-align: center;
  margin: 25rpx 20rpx;
}
.all_member_jieshan {
  font-size:17px;
  font-family:PingFang-SC;
