.all_member {
  margin: 0rpx 40rpx;
}
.all_member_title {
  font-size: 56rpx;
  font-family:PingFangSC;
  font-weight:500;
  color:rgba(0,0,0,1);
  margin-bottom: 40rpx;
}
.all_member_guan {
  display: flex;
  /* justify-content: space-between; */
