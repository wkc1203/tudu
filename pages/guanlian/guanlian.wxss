/* 右侧滚动样式 */
.swiper_container {
  flex: 1;
  margin-right: 40rpx;
  /* margin: auto; */
  /* margin-left: 230rpx; */
  height: 40rpx;
  width: 37vw;
}
.swiper_item {
  color: #fff;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
 }

/* 切换条滑块 */
.swiper-tab {
  display: flex;
  margin: 40rpx 40rpx 40rpx 40rpx;
  line-height:70rpx;
  background:rgba(19,165,129,0.45);
  box-shadow:0px 0px 16rpx 0px rgba(67,179,154,0.58);
  border-radius:40rpx;
  font-size:32rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.tab-list-left {
  font-size: 30rpx;
  display: inline-block;
  width: 50%;
  text-align: center;
}
.tab-list-right {
  text-align: center;
  line-height: 72rpx;
  font-size: 30rpx;
  display: inline-block;
  width: 50%;
}
.on {
  font-size:32rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color: #363636FF;
  background-color: #FFFFFFFF;
  background:rgba(255,255,255,1);
  box-shadow:0px 4rpx 14rpx 0px rgba(102,216,191,0.48);
  border-radius:42rpx;
}
.tab-list_content {
  display: flex;
  justify-content: center;
}

.tab-list_left_content_neirong {
  margin: auto 12rpx;
}

.tab-list_left_content_number {
  margin-top: 18rpx;
  line-height: 36rpx;
  width:50rpx;
  height:36rpx;
  font-size:28rpx;
  /* background:rgba(37,195,241,1); */
  border-radius:40rpx;
  font-family:DINPro-Medium;
  font-weight:500;
  
}
.number_Y {
  background:rgba(37,195,241,1);
  color:rgba(255,255,255,1);
}
.number_N {
  background:rgba(255,255,255,1);
  color: #42C2A4FF
}
.number_Z {
  background:rgba(73,196,154,1);
  color:rgba(255,255,255,1);
}
/* 代办图标 */
