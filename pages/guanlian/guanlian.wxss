/* 事件时间标题 */
.incident_list {
  display: flex;
  flex-direction: column 
}

.list_title {
  display: flex;
  margin: 28rpx auto;
  margin-left: 40rpx; 
}
.list_title_happendDate {
  font-family:PingFangSC-Semibold;
  line-height:40rpx;
  font-size:40rpx;
  font-weight:600;
  display: flex;

}
.list_title_left {
  font-family:PingFangSC-Regular;
  color: #C8DADF;
  font-size: 24rpx;
  line-height: 24rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  margin-right: 40rpx;
  font-weight:400;
  display: flex;
  justify-content: flex-end
}
.list_title_left_happendtime {
  margin-left: 320rpx;
}
.list_title_left_happendWeek {
  margin-left: 16rpx;
}
.odd_number {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  margin-left:20rpx;
  margin-right: 20rpx; 
  
}
.event_odd_number {
  position: relative;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  margin-left:20rpx;
  margin-right: 20rpx; 
}
.event_number {
  margin: 0rpx 30rpx 28rpx 40rpx;
  padding: 20rpx 20rpx;
}
.event_number_block {
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  width: 300rpx;
  height: 316rpx;
  padding: 20rpx 10rpx 20rpx 20rpx;
}
/* .event_number_block:last-child {
  margin-right: 20rpx;
} */
.number_block {
  position: relative;
  width: 300rpx;
  height: 316rpx;
  padding: 20rpx 0rpx 0rpx 20rpx;
  margin-bottom: 24rpx;
}
.number_block_content {
  display: flex;
  /* display: inline-block; */
  padding-right: 8rpx;
  line-height: 46rpx;
}
.number_block_tixing {
  position: absolute;
  bottom: 10rpx;
}

.number_block_content_wkc {
  display: -webkit-box;
  /* word-wrap:break-word; */
  /* white-space:pre-wrap; */
  word-break:break-all;

  text-overflow: ellipsis;
  -webkit-line-clamp: 4;
  overflow: hidden;
  -webkit-box-orient:vertical;
}
.tixing_wkc {
  display: flex;
  margin-bottom: 20rpx;
}
.number_block_img {
  width: 38rpx;
  height: 46rpx;
}

/* 完成 */
.number_block_wancheng {
  background: linear-gradient(#E8EEF6FF, #E7EDF6FF);
}
.number_block_content_wancheng {
  color: #AEB7C4FF
}
.number_block_tixing_wancheng {
  color: #AEB7C4FF
}


