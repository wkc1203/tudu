.swiper-tab {
  display: flex;
  margin: 10rpx 40rpx 40rpx 40rpx;
  line-height:70rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 5px 0px rgba(176,176,176,0.88);
  border-radius:40rpx;
  font-size:32rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
  height: 64rpx;
  width: 120rpx;
}
.swiper-tab-on {
  background:rgba(0,205,154,1);
}
.tab-list-left {
  font-size: 30rpx;
  display: inline-block;
  width: 50%;
  text-align: center;
  
  /* border-radius:40rpx; */
}
.tab-list-right {
  text-align: center;
  line-height: 72rpx;
  font-size: 30rpx;
  display: inline-block;
  width: 50%;
}
.ont {
  font-size:32rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color: #363636FF;
  background-color: #FFFFFFFF;
  background:rgba(255,255,255,1);
  box-shadow:0px 4rpx 14rpx 0px rgba(102,216,191,0.48);
  border-radius:42rpx;
}
.duanxin_button {
  height: 58rpx;
  width: 60rpx;
  background-color:transparent;
  border-radius:42rpx;
}
.time_tixing_xuanzhe_switch {
  margin-top: 10rpx;
}
.time_finish {
  background:linear-gradient(180deg,rgba(108,235,205,1) 0%,rgba(0,205,154,1) 100%);
  color: rgba(255,255,255,1);
  border-radius:22px;
  width: 700rpx;
  margin-top: 300rpx;
}