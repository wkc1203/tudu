/* 实现textarea高度自适应 */
.detail-view {
  /* 用于重叠 */
  position: relative;
  margin: 40rpx 20rpx;
  min-height: 300rpx;
  height: 100%
}
.detail-placeholder {
  /* 用于重叠 */
  position: absolute;
  /* 用于与textarea的光标起始位置对齐 */
  margin-top: -12rpx;
  padding: 0 10rpx;
  min-height: 100%;
  color: #c9c9c9;
  font-size: 28rpx;
}
.detail-textarea {
  /* 用于顶部与text对齐 */
  /* margin: 40rpx 20rpx; */
  /* top: -12rpx; */
  width: 100%;
  font-size: 32rpx;
  line-height: 52rpx;
  height: 100%
}
.placeholderClass {
  line-height:26px;
  font-size:16px;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(208,212,217,1);
}

.button_icon_list {
  display: flex;
  justify-content: space-between;
  /* margin-top: 230rpx; */
